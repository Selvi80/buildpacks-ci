#!/bin/bash

cat << EOF > /bin/wrapper
#!/usr/bin/env ruby
last_arg = "source /etc/profile.d/filter.sh && ruby #{ARGV.join(' ')}"
exec("/usr/bin/env", "bash", "-c", last_arg)
EOF

chmod +x /bin/wrapper

cat /bin/wrapper
cat /etc/profile.d/filter.sh

pushd buildpacks-ci
  /bin/wrapper ./scripts/stacks/test-ruby
popd
