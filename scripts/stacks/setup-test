#!/bin/bash

echo BEFORE WRAPPER
cat << EOF > /bin/wrapper
#!/usr/bin/env ruby
puts 'a'
%x(. /etc/profile.d/filter.sh)
puts 'b'
exec(*ARGV)
EOF

chmod +x /bin/wrapper

cat /bin/wrapper
cat /etc/profile.d/filter.sh

pushd buildpacks-ci
  echo BEFORE WRAPPER INVOCATION
  /bin/wrapper ./scripts/stacks/test-ruby
  echo AFTER WRAPPER INVOCATION
  printenv
popd
