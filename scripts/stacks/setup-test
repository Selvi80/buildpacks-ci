#!/bin/bash

echo BEFORE WRAPPER
cat << EOF > /bin/wrapper
#!/usr/bin/env ruby
puts 'a'
puts ARGV
puts 'b'
puts %x{pwd}
puts %x{ls}
puts '============'
puts %x{ls ./scripts}
puts '============'
puts %x{ls ./scripts/stacks}

exec("/usr/bin/env", "bash", "-c", "source /etc/profile.d/filter.sh && ruby #{ARGV}")
EOF

chmod +x /bin/wrapper

cat /bin/wrapper
cat /etc/profile.d/filter.sh

pushd buildpacks-ci
  echo BEFORE WRAPPER INVOCATION
  pwd
  /bin/wrapper /tmp/build/52f212af/buildpacks-ci/scripts/stacks/test-ruby
  echo AFTER WRAPPER INVOCATION
popd
