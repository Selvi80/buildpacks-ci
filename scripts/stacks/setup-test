#!/bin/bash

echo BEFORE WRAPPER
cat << EOF > /bin/wrapper
#!/bin/bash -l

echo IN WRAPPER
/usr/bin/env ruby $@
echo END OF WRAPPER
EOF
echo AFTER WRAPPER

chmod +x /bin/wrapper

pushd buildpacks-ci
  echo BEFORE WRAPPER INVOCATION
  /bin/wrapper ./scripts/stacks/test-ruby
  echo AFTER WRAPPER INVOCATION
popd
